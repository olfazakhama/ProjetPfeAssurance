{% extends 'templateAdmine/adminebase.html.twig' %}
{% block body %}
    <div class="main-content">
        <div class="main-content-inner">
            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="#">Home</a>
                    </li>
                    <li>
                        <a href="#">Tables</a>
                    </li>
                </ul>
            </div>
            <div class="page-content">
                <div class="page-header">
                    <h1>
                         Liste des constats
                        <small>
                            <i class="ace-icon fa fa-angle-double-right"></i>
                        </small>
                    </h1>
                    <br>

                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        <div class="row">
                            <div class="col-xs-12">

                      <table id="example1" class="table table-bordered table-striped">

                        <thead>
                        <tr>
                  <th>DateAccident</th>
                <th>Lieu</th>
                <th>NombreVehicule</th>
                <th>PointChoc</th>
                <th>NomConducteur</th>
                <th>PrenomConducteur</th>
                <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                         
                          {% for constat in constats %}
                          <tr>
                           <td class="sorting_1 dtr-control" tabindex="0">{{ constat.dateAccident ? constat.dateAccident|date('Y-m-d') : '' }}}</td>
                           
            
                           <td>{{ constat.lieu }}</td>
                           <td>{{ constat.nombreVehicule }}</td>
                           <td>{{ constat.pointChoc }}</td>
                           <td>{{ constat.nomConducteur }}</td>
                           <td>{{ constat.prenomConducteur }}</td>
                        
                          <td>
                              <div class="hidden-sm hidden-xs btn-group">
                                  <a class="btn btn-xs btn-danger" href="{{ path('constat_show', {'id': constat.id}) }}">
                                      <i class="ace-icon fa fa-check-square-o"></i>
                                  </a>
                              </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>

                      </table>
                            </div><!-- /.span -->
                        </div><!-- /.row -->
                        <!-- PAGE CONTENT ENDS -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-content -->
        </div>
    </div><!-- /.main-content -->
{% endblock %}
                          