{% extends 'templateAdmine/adminebase.html.twig' %}
{% block body %}
    <div class="main-content">
        <div class="main-content-inner">
            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="#">Home</a>
                    </li>
                    <li>
                        <a href="#">Tables</a>
                    </li>
                </ul>
            </div>
            <div class="page-content">
                <div class="page-header">
                    <h1>
                        Liste des compagnies
                        <small>
                            <i class="ace-icon fa fa-angle-double-right"></i>
                        </small>
                    </h1>
                    <br>
                    <a class="btn btn-xs btn-danger" href="{{ path('companie_new')}}">
                        Ajouter une compagnie
                    </a>
                </div><!-- /.page-header -->
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        <div class="row">
                            <div class="col-xs-12">

                      <table id="example1" class="table table-bordered table-striped">

                        <thead>
                        <tr>

                           <th>Nom</th>
                          <th>DateFondation</th>
                            <br><br>
                          <th>Adresse</th>
                         <th>actions</th>
                          
                       </tr>
                        </thead>
                        <tbody>
                         
                            {% for companie in companies %}
                         

                             <td>{{ companie.nom }}</td>
                            <td>{{companie.dateFondation ? companie.dateFondation|date('Y-m-d') : '' }}</td>

                            <td>{{ companie.adresse }}</td>
                          
                          <td>

                                <div class="hidden-sm hidden-xs btn-group">
                                    <a class="btn btn-xs btn-danger" href="{{ path('companie_delete', {'id': companie.id}) }}">
                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                    </a>
                                </div>
                                <div class="hidden-sm hidden-xs btn-group">
                                    <a class="btn btn-xs btn-info" href="{{ path('companie_edit', {'id': companie.id}) }}">
                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>

                      </table>
                            </div><!-- /.span -->
                        </div><!-- /.row -->
                        <!-- PAGE CONTENT ENDS -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-content -->
        </div>
    </div><!-- /.main-content -->
{% endblock %}
                          



